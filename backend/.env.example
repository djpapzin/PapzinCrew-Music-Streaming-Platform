# PapzinCrew Backend - Example Environment

# Logging
LOG_LEVEL=INFO
ENABLE_UPLOAD_PRINTS=1

# Storage: Backblaze B2 (S3-compatible)
# Required
B2_ENDPOINT=https://s3.us-west-002.backblazeb2.com
B2_REGION=us-west-002
B2_BUCKET=your-bucket
B2_ACCESS_KEY_ID=your-key-id
B2_SECRET_ACCESS_KEY=your-secret

# Optional tuning
B2_CONNECT_TIMEOUT=3
B2_READ_TIMEOUT=10
B2_MAX_ATTEMPTS=2
# Overall timeout (seconds) for B2 put_bytes_safe call used by upload route
B2_PUT_TIMEOUT=20

# Local fallback storage
# Used only if B2 is not configured or B2 upload fails
UPLOAD_DIR=uploads

# AI cover generation (Pollinations)
AI_COVER_TIMEOUT_SECONDS=45.0
